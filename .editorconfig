# EditorConfig file: https://editorconfig.org

root = true

[{*.{f90,py,c,yaml,yml,cmake},CMakeLists.txt}]
indent_style = space
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[{*.{f90,c,yaml,yml,cmake},CMakeLists.txt}]
indent_size = 2

[*.py]
indent_size = 4
