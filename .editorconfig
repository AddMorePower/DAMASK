# EditorConfig file: https://editorconfig.org

root = true

[{*.{f90,py,c,yaml,yml,cmake},CMakeLists.txt}]
charset = utf-8
max_line_length = 100
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[{*.{f90,c,yaml,yml,cmake},CMakeLists.txt}]
indent_size = 2

[*.py]
indent_size = 4
